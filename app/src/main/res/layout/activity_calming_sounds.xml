<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_off_white"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- כותרת וכפתור חזרה -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <Button
                android:id="@+id/backButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="←"
                android:textSize="20sp"
                android:background="@drawable/ic_arrow_back"
                android:backgroundTint="@color/primary_turquoise"
                android:textColor="@color/text_white" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="צלילים מרגיעים"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:gravity="center"
                android:layout_marginEnd="48dp" />

        </LinearLayout>

        <!-- נגן הצלילים הראשי -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/background_card">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/currentSoundTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="קולות יער"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:gravity="center"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/currentSoundDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="רחש עלים, ציוץ ציפורים וקולות הטבע"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:gravity="center"
                    android:layout_marginBottom="16dp" />

                <!-- כפתורי בקרה -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="12dp">

                    <Button
                        android:id="@+id/previousSoundButton"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:text="⏮️"
                        android:textSize="16sp"
                        android:backgroundTint="@color/button_secondary"
                        android:textColor="@color/text_white"
                        android:layout_marginEnd="12dp" />

                    <Button
                        android:id="@+id/playPauseButton"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:text="▶️"
                        android:textSize="20sp"
                        android:backgroundTint="@color/button_primary"
                        android:textColor="@color/text_white"
                        android:layout_marginHorizontal="12dp" />

                    <Button
                        android:id="@+id/nextSoundButton"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:text="⏭️"
                        android:textSize="16sp"
                        android:backgroundTint="@color/button_secondary"
                        android:textColor="@color/text_white"
                        android:layout_marginStart="12dp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/statusText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="לחץ להשמעה"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:gravity="center" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- בחירה מהירה של צלילים -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="בחר צליל:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="16dp" />

        <!-- שורה ראשונה של כפתורים -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <Button
                android:id="@+id/forestSoundsButton"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="🌲\nיער"
                android:textSize="14sp"
                android:backgroundTint="@color/primary_sage"
                android:textColor="@color/text_white"
                android:layout_marginEnd="6dp" />

            <Button
                android:id="@+id/oceanSoundsButton"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="🌊\nים"
                android:textSize="14sp"
                android:backgroundTint="@color/primary_turquoise"
                android:textColor="@color/text_white"
                android:layout_marginHorizontal="6dp" />

            <Button
                android:id="@+id/rainSoundsButton"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="🌧️\nגשם"
                android:textSize="14sp"
                android:backgroundTint="@color/text_hint"
                android:textColor="@color/text_white"
                android:layout_marginStart="6dp" />

        </LinearLayout>

        <!-- שורה שנייה של כפתורים -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <Button
                android:id="@+id/breathingMusicButton"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="🎵\nנשימה"
                android:textSize="14sp"
                android:backgroundTint="@color/purple_200"
                android:textColor="@color/text_white"
                android:layout_marginEnd="6dp" />

            <Button
                android:id="@+id/gongSoundsButton"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="🔔\nגונג"
                android:textSize="14sp"
                android:backgroundTint="@color/status_alert"
                android:textColor="@color/text_white"
                android:layout_marginHorizontal="6dp" />

            <Button
                android:id="@+id/whiteNoiseButton"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="📻\nרעש לבן"
                android:textSize="14sp"
                android:backgroundTint="@color/button_disabled"
                android:textColor="@color/text_primary"
                android:layout_marginStart="6dp" />

        </LinearLayout>

        <!-- טיפים -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/background_card">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="💡 טיפים להאזנה:"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• השתמש באוזניות לחוויה טובה יותר\n• התאם את עוצמת הקול לנח לך\n• נשום עמוק תוך כדי האזנה\n• תן לעצמך לשקוע בצלילים"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:lineSpacingExtra="4dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>