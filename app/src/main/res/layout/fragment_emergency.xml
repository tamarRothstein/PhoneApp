<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_off_white"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Emergency Support"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Immediate help when you need it most"
            android:textSize="16sp"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="24dp" />

        <!-- Critical Emergency Services -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🚨 Emergency Services"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/status_emergency"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">

            <Button
                android:id="@+id/call100Button"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="Call 100\nEmergency"
                android:textSize="14sp"
                android:backgroundTint="@color/button_emergency"
                android:textColor="@color/text_white"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/callPoliceButton"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="Call Police\n911"
                android:textSize="14sp"
                android:backgroundTint="@color/status_emergency"
                android:textColor="@color/text_white"
                android:layout_marginHorizontal="4dp" />

            <Button
                android:id="@+id/callAmbulanceButton"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="Ambulance\n101"
                android:textSize="14sp"
                android:backgroundTint="@color/status_emergency"
                android:textColor="@color/text_white"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- Quick Self Help -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🫁 Quick Self-Help"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/primary_turquoise"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">

            <Button
                android:id="@+id/quickBreathingButton"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="Emergency\nBreathing"
                android:textSize="14sp"
                android:backgroundTint="@color/primary_sage"
                android:textColor="@color/text_white"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/panicHelpButton"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="Panic Attack\nHelp"
                android:textSize="14sp"
                android:backgroundTint="@color/primary_turquoise"
                android:textColor="@color/text_white"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <Button
            android:id="@+id/findHelpButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="🏥 Find Nearby Help (Hospital/Police)"
            android:textSize="16sp"
            android:backgroundTint="@color/status_calm"
            android:textColor="@color/text_white"
            android:layout_marginBottom="24dp" />

        <!-- Emergency Contacts -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="👥 My Emergency Contacts"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="12dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/background_card">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Family Contact -->
                <LinearLayout
                    android:id="@+id/contactFamily"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:text="👨‍👩‍👧‍👦"
                        android:textSize="24sp"
                        android:gravity="center"
                        android:layout_marginEnd="16dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Family"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary" />

                        <TextView
                            android:id="@+id/contactFamilyName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Add Family Contact"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="📞"
                        android:textSize="24sp" />

                </LinearLayout>

                <!-- Friend Contact -->
                <LinearLayout
                    android:id="@+id/contactFriend"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:text="👥"
                        android:textSize="24sp"
                        android:gravity="center"
                        android:layout_marginEnd="16dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Best Friend"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary" />

                        <TextView
                            android:id="@+id/contactFriendName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Add Friend Contact"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="📞"
                        android:textSize="24sp" />

                </LinearLayout>

                <!-- Doctor Contact -->
                <LinearLayout
                    android:id="@+id/contactDoctor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:text="👨‍⚕️"
                        android:textSize="24sp"
                        android:gravity="center"
                        android:layout_marginEnd="16dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Doctor"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary" />

                        <TextView
                            android:id="@+id/contactDoctorName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Add Doctor Contact"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="📞"
                        android:textSize="24sp" />

                </LinearLayout>

                <Button
                    android:id="@+id/addContactButton"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="+ Add Emergency Contact"
                    android:textSize="14sp"
                    android:backgroundTint="@color/button_secondary"
                    android:textColor="@color/text_white" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- SOS and Location -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📱 Alert and Transport"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <Button
                android:id="@+id/sendSosButton"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="Send SOS\nMessage"
                android:textSize="14sp"
                android:backgroundTint="@color/button_emergency"
                android:textColor="@color/text_white"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/shareLocationButton"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="Share My\nLocation"
                android:textSize="14sp"
                android:backgroundTint="@color/status_alert"
                android:textColor="@color/text_white"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <Button
            android:id="@+id/callUberButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="🚗 Get Emergency Transport (Uber/Taxi)"
            android:textSize="16sp"
            android:backgroundTint="@color/primary_turquoise"
            android:textColor="@color/text_white"
            android:layout_marginBottom="40dp" />

    </LinearLayout>

</ScrollView>