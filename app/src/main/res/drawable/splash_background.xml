<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="@color/background_off_white"
                android:centerColor="@color/primary_turquoise"
                android:endColor="@color/primary_sage"
                android:type="linear" />
        </shape>
    </item>

    <!-- Logo placeholder -->
    <item android:gravity="center">
        <shape android:shape="oval">
            <solid android:color="@color/text_white" />
            <size android:width="120dp" android:height="120dp" />
        </shape>
    </item>

    <!-- Inner circle -->
    <item android:gravity="center">
        <shape android:shape="oval">
            <solid android:color="@color/primary_turquoise" />
            <size android:width="80dp" android:height="80dp" />
        </shape>
    </item>
</layer-list>